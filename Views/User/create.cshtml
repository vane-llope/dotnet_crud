@model UserModel
@{
  ViewData["Title"] = "Add User";
}


<form method="post" asp-controller="User" asp-action="Store" class="mt-5">
  <div class="container">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="row mb-3">
      <div class="col-2">
        <label asp-for="Name" class="col-form-label"></label>
      </div>
      <div class="col-10 ">
        <input type="text" asp-for="Name" class="form-controll p-2 w-100">
        <div class="col"></div><span class="text-danger" asp-validation-for="Name"></span>
      </div>

      <div class="col-2">
        <label asp-for="Email" class="col-form-label"></label>
      </div>
      <div class="col-10 ">
        <input type="text" asp-for="Email" class="form-controll p-2 w-100">
        <div class="col"></div><span class="text-danger" asp-validation-for="Email"></span>
      </div>

    </div>
  </div>
  <input type="submit" class="btn btn-success w-100 mt-3" value="Create">
  </div>
</form>